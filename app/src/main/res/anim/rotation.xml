<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rotation Animation -->
    <rotate
        android:duration="1000"
        android:fromDegrees="100"
        android:toDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%" />

    <alpha
        android:duration="1700"
        android:fromAlpha="0.1"
        android:toAlpha="1.0" />
</set>