<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/rounded_border_background"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="45dp"
    android:id="@+id/accommodation_admin_card_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/accommodation_photo_a"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hotel" />

            <!-- Hotel Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:orientation="vertical">

                <!-- Hotel Name -->
                <TextView
                    android:id="@+id/accommodation_status_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/border_background"
                    android:padding="4dp"
                    android:text="Inactive"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

                <!-- Hotel Name and Address -->
                <LinearLayout
                    android:id="@+id/nameAddressLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Hotel Name -->
                    <TextView
                        android:id="@+id/accommodation_name_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotel Name"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Hotel Address -->
                    <TextView
                        android:id="@+id/accommodation_address_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotel Address"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Rating -->

                <RatingBar
                    android:id="@+id/accommodation_rating_a"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:padding="0dp"
                    android:rating="4.5"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:stepSize="0.1" />


                <!-- More Button -->
                <Button
                    android:id="@+id/more_button_a"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="8dp"
                    android:text="More"
                    android:textSize="9sp" /> <!-- Added margin between buttons -->


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <!-- More Button -->
            <Button
                android:id="@+id/approve_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/approve_green"
                android:text="Approve" />

            <!-- Edit Button -->
            <Button
                android:id="@+id/deny_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/deny_red"
                android:text="Deny" />
        </LinearLayout>


    </LinearLayout>



    <!-- Hotel Photo -->

</RelativeLayout>