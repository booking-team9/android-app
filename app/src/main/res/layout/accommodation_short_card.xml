<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/rounded_border_background"
    android:id="@+id/accommodation_short_card_item">


    <!-- Hotel Photo -->
    <ImageView
        android:id="@+id/accommodation_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hotel" />

    <!-- Hotel Information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/accommodation_photo"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <!-- Hotel Name -->
        <TextView
            android:id="@+id/accommodation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Hotel Address -->
        <TextView
            android:id="@+id/accommodation_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel Address"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Rating -->
        <RatingBar
            android:id="@+id/accommodation_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="4.5"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:isIndicator="true"/>

    </LinearLayout>
</RelativeLayout>